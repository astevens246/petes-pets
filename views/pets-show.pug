extends layout

block content
  .row
    .col-sm-4
      if pet.avatarUrl
        img(src=pet.avatarUrl + '-square.').img-fluid
      else
        img(src=pet.picUrlSq).img-fluid
    .col-sm-8
      h1=pet.name
      p=pet.species
      p Born on #{pet.birthday}
      p=pet.description
      
      form(action='/pets/' + pet.id + '/purchase', method='POST')
        input(type='hidden', name='petId', value=pet.id)
        script.stripe-button(src='https://checkout.stripe.com/checkout.js',
        data-key=PUBLIC_STRIPE_API_KEY,
        data-amount=pet.price * 100,
        data-name='Pete\'s Pet Emporium',
        data-description=pet.name + ' - ' + pet.species,
        data-image='https://stripe.com/img/documentation/checkout/marketplace.png',
        data-locale='auto',
        data-zip-code='true')
      
      .text-right
        a(href="/pets/" + pet.id + "/edit").btn-link Edit
      
